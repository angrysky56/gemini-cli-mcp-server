{
  "mcpServers": {
    "gemini-cli": {
      "command": "uv",
      "args": [
        "--directory",
        "/path/to/gemini-cli-mcp-server",
        "run",
        "python",
        "src/main.py"
      ],
      "env": {
        "LOG_LEVEL": "INFO"
      },
      "timeout": 60000,
      "trust": false
    }
  }
}
